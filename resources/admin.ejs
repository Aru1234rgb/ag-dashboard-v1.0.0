<%- include('./components/wrapper') %>

<main class="flex-1 bg-gray-900">
  <div class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Notification Alerts -->
      <% if (req.query.success == "COMPLETE") { %>
      <div class="bg-emerald-900/30 border border-emerald-700 rounded-lg text-emerald-100 px-4 py-3 mb-6 shadow-lg backdrop-blur-sm" role="alert">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-emerald-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="font-semibold">Action Completed</p>
              <p class="text-xs opacity-80">The changes to the user have been made.</p>
            </div>
          </div>
          <button onclick="location.href = '../admin';" class="text-emerald-400 hover:text-emerald-300 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      <% } %>
      
      <!-- Other notification templates similarly updated -->
      <% if (req.query.err) { %>
      <div class="bg-rose-900/30 border border-rose-700 rounded-lg text-rose-100 px-4 py-3 mb-6 shadow-lg backdrop-blur-sm" role="alert">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-rose-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div>
              <p class="font-semibold">
                <% if (req.query.err == "INVALIDPARAMS") { %> Missing Parameters
                <% } else if (req.query.err == "FETCH_FAILED") { %> Unable to retrieve eggs
                <% } else if (req.query.err == "INVALIDAMOUNT") { %> Invalid Amount <% } %>
              </p>
              <p class="text-xs opacity-80">
                <% if (req.query.err == "INVALIDPARAMS") { %> All inputs must be filled out.
                <% } else if (req.query.err == "FETCH_FAILED") { %> An error occurred when fetching the eggs.
                <% } else if (req.query.err == "INVALIDAMOUNT") { %> The amount entered is invalid. <% } %>
              </p>
            </div>
          </div>
          <button onclick="location.href = '../admin';" class="text-rose-400 hover:text-rose-300 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      <% } %>

      <!-- Success messages for ban/unban -->
      <% if (req.query.success == "UNBANNED") { %>
      <div class="bg-emerald-900/30 border border-emerald-700 rounded-lg text-emerald-100 px-4 py-3 mb-6 shadow-lg backdrop-blur-sm" role="alert">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-emerald-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="font-semibold">User Unbanned</p>
              <p class="text-xs opacity-80">The user has been unbanned.</p>
            </div>
          </div>
          <button onclick="location.href = '../dashboard';" class="text-emerald-400 hover:text-emerald-300 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      <% } else if (req.query.success == "BANNED") { %>
      <div class="bg-emerald-900/30 border border-emerald-700 rounded-lg text-emerald-100 px-4 py-3 mb-6 shadow-lg backdrop-blur-sm" role="alert">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-emerald-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="font-semibold">User Banned</p>
              <p class="text-xs opacity-80">The user has been banned.</p>
            </div>
          </div>
          <button onclick="location.href = '../dashboard';" class="text-emerald-400 hover:text-emerald-300 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      <% } %>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Coin Management Section -->
        <div class="bg-gray-800/50 rounded-xl p-6 shadow-lg border border-gray-700/50">
          <div class="mb-6">
            <h2 class="text-xl font-bold text-white mb-1">Coin Management</h2>
            <p class="text-gray-400 text-sm">Manage user coin balances</p>
          </div>

          <div class="space-y-6">
            <!-- Add Coins -->
            <div>
              <h3 class="text-md font-semibold text-gray-300 mb-3">Add Coins</h3>
              <div class="space-y-4">
                <div>
                  <label for="ac-email" class="block text-sm font-medium text-gray-400 mb-1">Email</label>
                  <input type="text" id="ac-email" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="user@example.com">
                </div>
                <div>
                  <label for="ac-amount" class="block text-sm font-medium text-gray-400 mb-1">Amount</label>
                  <input type="text" id="ac-amount" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="100">
                </div>
                <button onclick="addCoins()" class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                  Add Coins
                </button>
              </div>
            </div>

            <!-- Set Coins -->
            <div>
              <h3 class="text-md font-semibold text-gray-300 mb-3">Set Coins</h3>
              <div class="space-y-4">
                <div>
                  <label for="sc-email" class="block text-sm font-medium text-gray-400 mb-1">Email</label>
                  <input type="text" id="sc-email" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="user@example.com">
                </div>
                <div>
                  <label for="sc-amount" class="block text-sm font-medium text-gray-400 mb-1">Amount</label>
                  <input type="text" id="sc-amount" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="100">
                </div>
                <button onclick="setCoins()" class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                  Set Coins
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Resource Management Section -->
        <div class="bg-gray-800/50 rounded-xl p-6 shadow-lg border border-gray-700/50">
          <div class="mb-6">
            <h2 class="text-xl font-bold text-white mb-1">Resource Management</h2>
            <p class="text-gray-400 text-sm">Allocate server resources to users</p>
          </div>

          <div class="space-y-6">
            <!-- Add Resources -->
            <div>
              <h3 class="text-md font-semibold text-gray-300 mb-3">Add Resources</h3>
              <div class="space-y-4">
                <div>
                  <label for="ar-email" class="block text-sm font-medium text-gray-400 mb-1">Email</label>
                  <input type="text" id="ar-email" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="user@example.com">
                </div>
                <div class="grid grid-cols-3 gap-4">
                  <div>
                    <label for="ar-cpu" class="block text-sm font-medium text-gray-400 mb-1">CPU</label>
                    <input type="text" id="ar-cpu" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="Cores">
                  </div>
                  <div>
                    <label for="ar-ram" class="block text-sm font-medium text-gray-400 mb-1">RAM</label>
                    <input type="text" id="ar-ram" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="GB">
                  </div>
                  <div>
                    <label for="ar-disk" class="block text-sm font-medium text-gray-400 mb-1">Disk</label>
                    <input type="text" id="ar-disk" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="GB">
                  </div>
                </div>
                <button onclick="addResources()" class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                  Add Resources
                </button>
              </div>
            </div>

            <!-- Set Resources -->
            <div>
              <h3 class="text-md font-semibold text-gray-300 mb-3">Set Resources</h3>
              <div class="space-y-4">
                <div>
                  <label for="sr-email" class="block text-sm font-medium text-gray-400 mb-1">Email</label>
                  <input type="text" id="sr-email" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="user@example.com">
                </div>
                <div class="grid grid-cols-3 gap-4">
                  <div>
                    <label for="sr-cpu" class="block text-sm font-medium text-gray-400 mb-1">CPU</label>
                    <input type="text" id="sr-cpu" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="Cores">
                  </div>
                  <div>
                    <label for="sr-ram" class="block text-sm font-medium text-gray-400 mb-1">RAM</label>
                    <input type="text" id="sr-ram" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="GB">
                  </div>
                  <div>
                    <label for="sr-disk" class="block text-sm font-medium text-gray-400 mb-1">Disk</label>
                    <input type="text" id="sr-disk" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="GB">
                  </div>
                </div>
                <button onclick="setResources()" class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                  Set Resources
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- User Management Section -->
        <div class="bg-gray-800/50 rounded-xl p-6 shadow-lg border border-gray-700/50">
          <div class="mb-6">
            <h2 class="text-xl font-bold text-white mb-1">User Management</h2>
            <p class="text-gray-400 text-sm">Manage user accounts and permissions</p>
          </div>

          <div class="space-y-6">
            <!-- Ban User -->
            <div>
              <h3 class="text-md font-semibold text-gray-300 mb-3">Ban User</h3>
              <div class="space-y-4">
                <div>
                  <label for="ban-email" class="block text-sm font-medium text-gray-400 mb-1">Email</label>
                  <input type="text" id="ban-email" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="user@example.com" required>
                </div>
                <div>
                  <label for="ban-reason" class="block text-sm font-medium text-gray-400 mb-1">Reason</label>
                  <input type="text" id="ban-reason" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="Reason for ban">
                </div>
                <button onclick="ban()" class="w-full px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition-colors shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">
                  Ban User
                </button>
              </div>
            </div>

            <!-- Unban User -->
            <div>
              <h3 class="text-md font-semibold text-gray-300 mb-3">Unban User</h3>
              <div class="space-y-4">
                <div>
                  <label for="unban-email" class="block text-sm font-medium text-gray-400 mb-1">Email</label>
                  <input type="text" id="unban-email" class="w-full px-4 py-2 bg-gray-700/50 border border-gray-600/50 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" placeholder="user@example.com" required>
                </div>
                <button onclick="unban()" class="w-full px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50">
                  Unban User
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- System Tools Section -->
        <div class="bg-gray-800/50 rounded-xl p-6 shadow-lg border border-gray-700/50">
          <div class="mb-6">
            <h2 class="text-xl font-bold text-white mb-1">System Tools</h2>
            <p class="text-gray-400 text-sm">Administrative system utilities</p>
          </div>

          <div class="space-y-6">
            <!-- Scan Images -->
            <div>
              <h3 class="text-md font-semibold text-gray-300 mb-3">Scan Images</h3>
              <p class="text-gray-400 text-sm mb-4">Update available container images from API</p>
              <a href="/scanimages" class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Scan Images
              </a>
            </div>

            <!-- Scan Nodes -->
            <div>
              <h3 class="text-md font-semibold text-gray-300 mb-3">Scan Nodes</h3>
              <p class="text-gray-400 text-sm mb-4">Update available nodes from API</p>
              <a href="/scannodes" class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
                </svg>
                Scan Nodes
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  // All the existing script functions remain the same
  async function addCoins() {
    let email = encodeURIComponent(document.getElementById("ac-email").value);
    let amount = encodeURIComponent(document.getElementById("ac-amount").value);
    document.location.href = `/addcoins?amount=${amount}&email=${email}`;
  };

  async function setCoins() {
    let email = encodeURIComponent(document.getElementById("sc-email").value);
    let amount = encodeURIComponent(document.getElementById("sc-amount").value);
    document.location.href = `/setcoins?amount=${amount}&email=${email}`;
  };

  async function addResources() {
    let email = encodeURIComponent(document.getElementById("ar-email").value);
    let cpu = encodeURIComponent(document.getElementById("ar-cpu").value);
    let ram = encodeURIComponent(document.getElementById("ar-ram").value);
    let disk = encodeURIComponent(document.getElementById("ar-disk").value);
    document.location.href = `/addresources?email=${email}&cpu=${cpu}&ram=${ram}&disk=${disk}`;
  };

  async function setResources() {
    let email = encodeURIComponent(document.getElementById("sr-email").value);
    let cpu = encodeURIComponent(document.getElementById("sr-cpu").value);
    let ram = encodeURIComponent(document.getElementById("sr-ram").value);
    let disk = encodeURIComponent(document.getElementById("sr-disk").value);
    document.location.href = `/setresources?email=${email}&cpu=${cpu}&ram=${ram}&disk=${disk}`;
  };

  async function ban() {
    let email = encodeURIComponent(document.getElementById("ban-email").value);
    let reason = encodeURIComponent(document.getElementById("ban-reason").value);
    document.location.href = `/ban?email=${email}&reason=${reason}`;
  };

  async function unban() {
    let email = encodeURIComponent(document.getElementById("unban-email").value);
    document.location.href = `/unban?email=${email}`;
  };
</script>

<%- include('./components/footer') %>
