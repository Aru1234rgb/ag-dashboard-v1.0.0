<div class="min-h-screen relative text-white font-sans overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-black via-gray-900 to-purple-900 animate-background"></div>
  <canvas id="backgroundCanvas" class="absolute inset-0 w-full h-full opacity-50"></canvas>
  <div class="absolute inset-0 z-0">
    <div id="particles-js" class="absolute inset-0 w-full h-full"></div>
  </div>
  <div class="relative z-10">
    <%- include('./components/wrapper') %>
    <main class="container mx-auto px-6 py-8">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h1 class="text-5xl font-extrabold animate-pulse bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent drop-shadow-xl">Dashboard</h1>
          <p class="text-gray-300 text-lg animate-fade">Monitor your resources and manage your account effectively.</p>
        </div>
        <nav class="bg-gray-800 px-6 py-3 rounded-lg shadow-2xl backdrop-blur-md">
          <ol class="flex items-center space-x-2 text-gray-300">
            <li><a href="#_" class="hover:text-white transition-colors">Home</a></li>
            <li>/</li>
            <li class="text-white font-semibold">Dashboard</li>
          </ol>
        </nav>
      </div>
      
      <div class="bg-gradient-to-r from-orange-500 to-red-500 p-8 rounded-2xl mb-6 shadow-2xl flex flex-col md:flex-row items-center justify-between animate-slide-in">
        <div>
          <h2 class="text-3xl font-bold">Welcome back!</h2>
          <p class="text-white/90">Manage your wallet, deploy resources, and enhance your experience.</p>
        </div>
        <a href="/create-server" class="mt-3 md:mt-0 inline-block bg-white text-orange-700 font-bold py-3 px-6 rounded-xl hover:bg-gray-200 transition-all shadow-xl transform hover:scale-105">Get Started</a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6 animate-fade-in">
        <a href="/servers" class="bg-indigo-600 p-6 rounded-2xl shadow-xl text-center hover:bg-indigo-500 transition-all transform hover:scale-110">
          <h3 class="text-lg font-medium">Servers</h3>
          <p class="text-gray-300 text-sm">View your servers and make serves.</p>
        </a>
        <a href="/credentials" class="bg-teal-600 p-6 rounded-2xl shadow-xl text-center hover:bg-teal-500 transition-all transform hover:scale-110">
          <h3 class="text-lg font-medium">Settings</h3>
          <p class="text-gray-300 text-sm">Customize account preferences.</p>
        </a>
        <a href="/afk" class="bg-red-600 p-6 rounded-2xl shadow-xl text-center hover:bg-red-500 transition-all transform hover:scale-110">
          <h3 class="text-lg font-medium">Earn Coins</h3>
          <p class="text-gray-300 text-sm">Go to this page so you can earn coins.</p>
        </a>
      </div>

      <dl class="mt-4 grid grid-cols-1 divide-y divide-white/5 overflow-hidden rounded-2xl bg-white/10 shadow-lg md:grid-cols-3 md:divide-y-0 md:divide-x">
        <div class="px-6 py-6 sm:p-8 bg-black/20 rounded-lg shadow-md hover:scale-105 transition-all">
          <dt class="text-lg font-semibold text-white">Available RAM</dt>
          <dd class="mt-2 text-3xl font-bold text-orange-400">
            <%= ((max.ram - existing.ram) / 1024).toFixed(2) %> GB
          </dd>
        </div>

        <div class="px-6 py-6 sm:p-8 bg-black/20 rounded-lg shadow-md hover:scale-105 transition-all">
          <dt class="text-lg font-semibold text-white">Available CPU</dt>
          <dd class="mt-2 text-3xl font-bold text-orange-400">
            <%= max.cpu - existing.cpu %>%
          </dd>
        </div>

        <div class="px-6 py-6 sm:p-8 bg-black/20 rounded-lg shadow-md hover:scale-105 transition-all">
          <dt class="text-lg font-semibold text-white">Available Disk</dt>
          <dd class="mt-2 text-3xl font-bold text-orange-400">
            <%= ((max.disk - existing.disk) / 1024).toFixed(2) %> GB
          </dd>
        </div>
      </dl>
    </main>
    <%- include('./components/footer') %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<script>
  particlesJS("particles-js", {
    particles: {
      number: { value: 100 },
      size: { value: 2 },
      move: { speed: 1 },
      shape: { type: "star" },
      opacity: { value: 0.7 },
      line_linked: { enable: false },
      color: { value: "#ffffff" }
    }
  });
</script>
